@model UserInfoViewModel
@{
    ViewBag.Title = "Edit User";
}

<form asp-controller="UserInfo" asp-action="Edit" method="post">

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" disabled />

    <label asp-for="LastName"></label>
    <input asp-for="LastName"  disabled/>

    <label asp-for="BirthDate"></label>
    <input asp-for="BirthDate" disabled />

    <label asp-for="Gender"></label>
    <select asp-for="@Model.Gender">
        <option value="" selected disabled>Select your gender</option>
        @for (int i = 1; i <= Enum.GetNames(typeof(GenderType)).Length; i++)
        {
            <option value="@i">@((GenderType)i)</option>
        }
    </select>

    <p>Optional</p>

    <label asp-for="ImgUrl"></label>
    <input asp-for="ImgUrl" />
    <input asp-for="FacebookUrl" placeholder="Link to Facebook" />
    <input asp-for="InstagramUrl" placeholder="Link to Instagram" />
    <input asp-for="YouTubeUrl" placeholder="Link to YouTube" />

    <input type="submit" value="submit" />
</form>