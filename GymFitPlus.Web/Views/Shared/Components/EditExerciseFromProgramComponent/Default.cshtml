@model FitnessProgramExercisesInfoViewModel

@{
    ViewBag.Title = "Exercise edit";
}

<form asp-area="" asp-controller="Exercise" asp-action="EditExerciseFromProgram" method="post">

    <input asp-for="FitnessProgramId" hidden >
    <input asp-for="ExerciseId" hidden >

    <div class="form-group mt-2">
        <input asp-for="Order" type="text" class="form-style" style="padding-left:120px;" required>
        <i class="input-icon">Order:</i>
        <span asp-validation-for="Order" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input asp-for="Sets" type="text" class="form-style" style="padding-left:120px;" required>
        <i class="input-icon">Sets:</i>
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input asp-for="Reps" type="text" class="form-style" style="padding-left:120px;" required>
        <i class="input-icon">Reps:</i>
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input asp-for="Weight" type="text" class="form-style" style="padding-left:120px;" required>
        <i class="input-icon">Weight:</i>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <button class="btnn" type="submit">Save changes</button>
    </div>
</form>
