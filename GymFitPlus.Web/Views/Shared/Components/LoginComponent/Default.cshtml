@model LoginViewModel
@{
    ViewBag.Title = "Login page";
}
<div class="section text-center">
    <h4 class="mb-4 pb-3">Log In</h4>

    <form asp-area="" asp-action="Login" asp-controller="Account" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Username" type="text" class="form-style" placeholder="Your Username" autocomplete="off">
            <i class="input-icon ph--user-bold"></i>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <input asp-for="Password" type="password" class="form-style" placeholder="Your Password" autocomplete="off">
            <i class="input-icon uil--lock-alt"></i>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group m-2">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" type="checkbox" class="bigger-checkbox m-2">
        </div>

        <button type="submit" class="btnn mt-4 btn-primary btn-block">Login</button>
    </form>
</div>

