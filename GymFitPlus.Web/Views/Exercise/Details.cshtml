@model ExerciseDetailViewModel
@{
    ViewBag.Title = "Exercise Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AddExercise.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/IndexExercises.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ExerciseDetails.css" asp-append-version="true" />
}

<header class="text-center mb-5">
    <h1>@Model.Name Details</h1>
</header>

<div class="container">
    <div class="row text-center">
        <div class="row justify-content-center">
            <div class="card col-md-12 box myBody mt-4">
                <div class="card myBody">
                    <div class="embed-responsive embed-responsive-16by9 myBody">
                        <iframe class="embed-responsive-item myBody" src="https://www.youtube.com/embed/@(Model.VideoUrl)" allowfullscreen></iframe>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.Name</h3>
                        <p class="card-text"> Used in @Model.UsedByProgramsCount fitness programs.</p>
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center ">
        <div class="dropdown-center col-md-12 mt-3">
            <a class="btnn btnnn nav-link dropdown-toggle" onclick="loadData(@Model.Id)" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                Add To My Fitness Program
            </a>
            <ul class="dropdown-menu" id="myList">
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/ExerciseDetails.js"></script>
}
