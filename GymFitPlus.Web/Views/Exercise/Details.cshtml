@model ExerciseDetailViewModel
@{
    ViewBag.Title = "Exercise Details";
}

<header class="text-center">
    <h1>@Model.Name Details</h1>
</header>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3 center-div">
            <a class="btnn nav-link d-flex justify-content-center" 
                asp-controller="Exercise" 
                asp-action="EditExercise"
                asp-route-id="@Model.Id">
                Edit Exercise</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row text-center">
        <div class="row justify-content-center">
            <div class="card col-md-12 box">
                <div class="card">
                    
                    <div class="card-body">
                        <h3 class="card-title">@Model.Name</h3>
                        <p class="card-text"> Used in @Model.UsedByProgramsCount diffrent fitness programs.</p>
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

