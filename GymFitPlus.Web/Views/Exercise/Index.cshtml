@model IEnumerable<ExerciseAllViewModel>
@{
    ViewBag.Title = "Exercises";
}

<header class="text-center">
    <h1>Explore Exercises</h1>
</header>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3 center-div">
            <a class="btnn nav-link d-flex justify-content-center" asp-controller="Exercise" asp-action="AddExercise">Add Exercise</a>
        </div>
    </div>
</div>

@await Component.InvokeAsync("SearchExerciseComponent", ViewBag.Query)

<div class="container">
    <div class="row text-center">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="card col-md-2 box">
                    <a asp-controller="Exercise" asp-action="Details" asp-route-id="@item.Id" class="btn">
                        <div class="card h-100">
                            <img src="/images/Exercises/@(item.MuscleGroup.ToString()).svg" class="card-img-top"/>
                            <div class="card-body">
                                <h3 class="card-title">@item.Name</h3>
                                <p class="card-text"> Used in @item.UsedByProgramsCount diffrent fitness programs.</p>
                            </div>
                        </div>                        
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style> 
    .card{
        background-color: #2a2b38;
        color:white;
        border:none;
    }

    h1 {
        font-weight: bold;
        color: white;
        font-size: 60px;
    }

    .box {
        width: 250px;
        background-color: #2a2b38;
        text-align: center;
        overflow: hidden;
        transition: transform 5s, background-color 5s;
        position: relative;
        z-index: 1;
        box-shadow: 43px 6px 60px 4px rgba(0,0,0,0.84);
        border-radius: 30px;
        margin-top: 50px;
        margin-left: 30px;
    }

        .box span {
            display: block;
        }

        .box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 200%;
            background: linear-gradient(to top, #ffeba7, #ff206e);
            transition: transform 2s;
            transform-origin: center top;
            transform: scaleY(0);
            z-index: -1;
        }

        .box:hover::before {
            transform: scaleY(1);
        }


    .btnn {
        border-radius: 6px;
        height: 50px;
        font-weight: 600;
        text-transform: uppercase;
        -webkit-transition: all 200ms linear;
        transition: all 200ms linear;
        padding: 0 30px;
        margin-top: 20px;
        letter-spacing: 1px;
        display: -webkit-inline-flex;
        display: -ms-inline-flexbox;
        display: inline-flex;
        -webkit-align-items: center;
        -moz-align-items: center;
        -ms-align-items: center;
        align-items: center;
        -webkit-justify-content: center;
        -moz-justify-content: center;
        -ms-justify-content: center;
        justify-content: center;
        -ms-flex-pack: center;
        text-align: center;
        border: none;
        background-color: #ffeba7;
        color: #102770;
        box-shadow: 0 8px 24px 0 rgba(255,235,167,.2);
    }

        .btnn:active,
        .btnn:focus {
            background-color: #ff206e;
            color: #ffeba7;
            box-shadow: 0 8px 24px 0 rgba(16,39,112,.2);
        }

        .btnn:hover {
            background-color: #ff206e;
            color: #ffeba7;
            box-shadow: 0 8px 24px 0 rgba(16,39,112,.2);
        }
</style>
