@model IEnumerable<RecipesAllViewModel>
@{
    ViewBag.Title = "Explore Recipes";

    bool isFavourite = ViewBag.IsFavourite != null ? ViewBag.IsFavourite : false;
}
@section Styles {
    <link rel="stylesheet" href="~/css/AddExercise.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/IndexExercises.css" asp-append-version="true" />
}


<div class="row">
    <div class="col-md-6">
        <header class="text-center">
            <a asp-action="Index" asp-controller="Recipe" asp-route-favourite="false" class="tabLinks">
                <h1 class="tabLinks">All Recipes</h1>
            </a>
        </header>
    </div>
    <div class="col-md-6">
        <header class="text-center">
            <a asp-action="Index" asp-controller="Recipe" asp-route-favourite="true" class="tabLinks" style="">
                <h1 class="tabLinks">My Recipes</h1>
            </a>
        </header>
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3 center-div mb-4">
            <a class="btnn nav-link d-flex justify-content-center" asp-controller="Recipe" asp-action="AddRecipe">Add Recipe</a>
        </div>
    </div>
</div>
<hr />

@await Component.InvokeAsync("SearchRecipesComponent", ViewBag.Query)

@if (Model.Any())
{
    <div class="container">
        <div class="row text-center">
            <div class="row justify-content-center mt-0" id="sourceElement">
                @foreach (var item in Model)
                {
                    string imgSrc = item.Image != null
                    ? String.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.Image))
                    : "/images/Recipes/food.svg";

                    <div class="card col-md-2 box mt-3">
                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@item.Id" asp-route-favourite="@isFavourite" class="btn">
                            <div class="card h-100 ">
                                <img src="@imgSrc" class="card-img-top" />
                                <div class="card-body">
                                    <h3 class="card-title">@item.Name</h3>
                                    <p>@item.ProteinPerHundredGrams</p>
                                    <p>@item.CarbsPerHundredGrams</p>
                                    <p>@item.FatPerHundredGrams</p>
                                    <p class="card-text">This recipe is a favorite of @item.FavoriteByUsers users.</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row text-center">
            <div class="row justify-content-center mt-5" id="sourceElement">
                <h3 id="checkForButtons">Nothing was found for your search</h3>
            </div>
        </div>
    </div>
    <style>
        #targetElementP {
            visibility: hidden;
        }

            #targetElementP a {
                pointer-events: none;
            }

        #targetElementN {
            visibility: hidden;
        }

            #targetElementN a {
                pointer-events: none;
            }
    </style>
}


@section Scripts {
    <script src="~/js/IndexExercises.js"></script>
}
