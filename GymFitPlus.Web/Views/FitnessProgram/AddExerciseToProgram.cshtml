@model FitnessProgramExercisesInfoViewModel
@{
    ViewBag.Title = "Add Exercise";
}

<div class="container">
    <div class="row">
    </div>
</div>

<form asp-controller="FitnessProgram" asp-action="AddExerciseToProgram" method="post" class="row g-3 needs-validation" >

    <input asp-for="FitnessProgramId" hidden>
    <input asp-for="Order" hidden />

    <div class="col-md-3">
        <label asp-for="ExerciseId"  class="form-label"></label>
        <select asp-for="ExerciseId" class="form-select"  required>
            <option selected disabled value="">Choose...</option>
            @foreach (var item in Model.Exercises)
            {
                <option value="@item.Id">@item.Name</option>
            } 
        </select>
        <span asp-validation-for="ExerciseId" class="alert-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Sets" class="form-label"></label>
        <input asp-for="Sets" type="text" class="form-control"required>
        <span asp-validation-for="Sets" class="alert-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" type="text" class="form-control"  required>
        <span asp-validation-for="Reps" class="alert-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" type="text" class="form-control"  required>
        <span asp-validation-for="Weight" class="alert-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit form</button>
    </div>
</form>

