@model IEnumerable<FitnessProgramFormViewModel>
@{
    ViewBag.Title = "Choose program";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AddExercise.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StartWorkout.css" asp-append-version="true" />
}

<header class="text-center">
    <h1>Choose Fitness Program</h1>
</header>


<div class="container">
    <div class="row text-center">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="card col-md-2 box" style="border-radius: 50px;">
                    <a asp-controller="FitnessProgram" asp-action="Details" asp-route-id="@item.Id" asp-route-startWorkout="true" class="btn linkbtn">
                        <div>
                            <div class="card-body text-light">
                                <h3 class="card-title">@item.Name</h3>
                                <p class="card-text"> Have @item.ExerciseCount exercise.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

