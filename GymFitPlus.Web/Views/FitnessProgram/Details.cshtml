@model FitnessProgramDetailViewModel
@{
    ViewBag.Title = Model.Name;
}

@if (ViewBag.Success != null)
{
    if (ViewBag.Success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> You successfuly @TempData["Action"]!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Failure!</strong> Something went wrong <br /> @TempData["Errors"].
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1 class="float-end">@Model.Name</h1>
        </div>
        <div class="col-sm-4">
            <button type="button" class="btn bg-transparent border-0" data-bs-toggle="modal" data-bs-target="#ProgramNameModal">
                <i class="fa fa-pencil fa-lg" style="font-size: 30px; color: gray;"></i>
            </button>
            <div class="modal fade" id="ProgramNameModal" tabindex="-1" aria-labelledby="ProgramNameModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Edit program name</h1>
                        </div>
                        <form asp-action="EditProgramName" asp-controller="FitnessProgram" method="post">

                            <input asp-for="Id" hidden />

                            <label asp-for="Name" class="col-form-label-sm"></label>
                            <input asp-for="Name" class="form-control" type="text" required />
                            <span asp-validation-for="Name" id="Name-error" class="text-danger"></span>

                            <input type="submit" class="btn btn-outline-primary float-end" value="Save changes" />
                        </form>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <button data-bs-toggle="modal"
                    data-bs-target="#DeleteProgram"
                    class="btn btn-outline-danger"
                    style="font-weight:bold;">
                Delete
            </button>
            <div class="modal fade" id="DeleteProgram" tabindex="-1" aria-labelledby="EditExerciseLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5">Are you sure you want to delete program @Model.Name?</h1>
                        </div>
                        <div class="modal-body">
                            <form asp-controller="FitnessProgram" asp-action="Delete" method="post">
                                <input asp-for="Id" hidden />
                                <input type="submit" class="btn btn-danger float-end" value="Yes" />
                            </form>
                            <button class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Exercise</th>
                            <th scope="col">Sets</th>
                            <th scope="col">Reps</th>
                            <th scope="col">Weight</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Exercises.OrderBy(x => x.Order))
                        {
                            string idForModal = $"element{item.FitnessProgramId}{item.ExerciseId}edit";
                            string idForRemove = $"element{item.FitnessProgramId}{item.ExerciseId}remove";

                            <tr>
                                <th scope="row">@item.Order</th>
                                <td>@item.ExerciseName</td>
                                <td style="text-align:center">@item.Sets</td>
                                <td style="text-align:center">@item.Reps</td>
                                <td style="text-align:center">@item.Weight</td>
                                <td style="text-align:center">
                                    <div class="btn-group dropend">
                                        <button type="button"
                                                class="btn btn-sm btn-secondary dropdown-toggle"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            &#8942;
                                        </button>
                                        <ul class="dropdown-menu" style="text-align:center;">
                                            <li>
                                                <button type="button"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#@idForModal"
                                                        class="dropdown-item btn btn-primary"
                                                        style="font-weight:bold;">
                                                    Edit
                                                </button>
                                            </li>
                                            <li>
                                                <button type="button"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#@idForRemove"
                                                        class="btn btn-outline-danger dropdown-item"
                                                        style="color:red; font-weight:bold;">
                                                    Remove
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    <div class="modal fade" id="@idForRemove" tabindex="-1" aria-labelledby="EditExerciseLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5">Are you sure you want to delete this exercise from @Model.Name?</h1>
                                                </div>
                                                <div class="modal-body">
                                                    <form asp-action="RemoveExerciseFromProgram" method="post"
                                                          asp-controller="FitnessProgram"
                                                          asp-route-exerciseId="@item.ExerciseId"
                                                          asp-route-programId="@item.FitnessProgramId">

                                                        <input type="submit" class="btn btn-outline-danger float-end" value="Yes" />
                                                    </form>
                                                    <button class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="modal fade" id="@idForModal" tabindex="-1" aria-labelledby="EditExerciseLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5">Edit @item.ExerciseName</h1>
                                                </div>
                                                <div class="modal-body">
                                                    @await Component.InvokeAsync(
                                                             "EditExerciseFromProgramComponent",
                                                             new
                                                             {
                                                                 exerciseId = item.ExerciseId,
                                                                 programId = item.FitnessProgramId
                                                             })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                <div class="d-grid gap-2">
                                    <a asp-controller="FitnessProgram"
                                       asp-action="AddExerciseToProgram"
                                       asp-route-programId="@Model.Id" ,
                                       asp-route-exerciseCount="@Model.Exercises.Count()"
                                       class="btn btn-primary">
                                        Add Exercise
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

